if [ $# == 0 ]; then
	dmesg > dmesg
	dmesg > dmesg-$(uname -r)
	colordiff -u dmesg{.old,} | less -iR
	cmp dmesg{.old,} || cp dmesg dmesg.old
else
	colordiff -u $(\ls -tr dmesg-*$1* | tail -2) | less -R
fi
